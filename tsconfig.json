{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "lib": ["es2021"],
        "module": "node16",
        "target": "es2021",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "node16",
        "rootDir": "./src",
        "outDir": "./dist",
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"],
}
