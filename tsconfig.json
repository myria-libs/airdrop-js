{
    "compilerOptions": {
        "target": "ES2019",
        "module": "CommonJS",
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "es2018",
            "es2019",
            "es2020",
            "esnext.asynciterable",
            "DOM",
        ],
        "outDir": "dist",
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "inlineSourceMap": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "resolveJsonModule": true,
        "strict": true,
        "useUnknownInCatchVariables": false,
        "moduleResolution": "node",
        "skipLibCheck": true,
    },
    "include": ["__tests__", "scripts", "src", "index.ts"],
    "exclude": ["github", "husky", "coverage", "example", "tests"],
    "compileOnSave": true,
}
